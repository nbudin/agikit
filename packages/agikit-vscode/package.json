{
  "name": "agikit-vscode",
  "displayName": "agikit-vscode",
  "description": "Develop games for Sierra's AGI adventure game engine",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:agilogic",
    "onCommand:agikit-vscode.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "agikit.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        }
      }
    },
    "languages": [
      {
        "id": "agilogic",
        "extensions": [
          ".agilogic"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "agilogic",
        "scopeName": "source.agilogic",
        "path": "./syntaxes/agilogic.tmGrammar.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "directive": [
            "keyword.directive"
          ],
          "label": [
            "constant.other"
          ],
          "variable.pointer": [
            "variable.other.property"
          ],
          "invalid": [
            "invalid.illegal"
          ]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "agikit-core": "^0.3.1",
    "agikit-logic-language-server": "^0.3.1",
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.31",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
