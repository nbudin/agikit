{
  "name": "agikit-vscode",
  "displayName": "agikit-vscode",
  "description": "Develop games for Sierra's AGI adventure game engine",
  "version": "0.5.0",
  "engines": {
    "vscode": "^1.54.0"
  },
  "publisher": "nbudin",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nbudin/agikit.git"
  },
  "activationEvents": [
    "onLanguage:agilogic",
    "onCommand:workbench.action.tasks.runTask",
    "onCommand:agikit.runWithScummVM",
    "onCustomEditor:agikit.picEditor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "taskDefinitions": [
      {
        "type": "agikit-build"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "agikit",
      "properties": {
        "agikit.scummvmPath": {
          "scope": "machine-overrideable",
          "type": "string",
          "description": "The path to the ScummVM executable."
        }
      }
    },
    "commands": [
      {
        "command": "agikit.runWithScummVM",
        "title": "Run AGI game with ScummVM"
      }
    ],
    "customEditors": [
      {
        "viewType": "agikit.picEditor",
        "displayName": "AGI PIC",
        "selector": [
          {
            "filenamePattern": "*.agipic"
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "agilogic",
        "extensions": [
          ".agilogic"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "agilogic",
        "scopeName": "source.agilogic",
        "path": "./syntaxes/agilogic.tmGrammar.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "directive": [
            "keyword.directive"
          ],
          "label": [
            "constant.other"
          ],
          "variable.pointer": [
            "variable.other.property"
          ],
          "invalid": [
            "invalid.illegal"
          ]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.1",
    "agikit-cli": "^0.5.0",
    "agikit-core": "^0.5.0",
    "agikit-logic-language-server": "^0.5.0",
    "agikit-pic-editor": "^0.5.0",
    "bootstrap-icons": "^1.4.0",
    "buffer": "^6.0.3",
    "react": "^17.0.1",
    "react-cool-onclickoutside": "^1.6.1",
    "react-dom": "^17.0.1",
    "react-popper": "^2.2.4",
    "uuid": "^8.3.2",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-uri": "^3.0.2"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/uuid": "^8.3.0",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "assert-never": "^1.2.1",
    "css-loader": "^5.1.3",
    "eslint": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "glob": "^7.1.6",
    "mini-css-extract-plugin": "^1.3.9",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "shebang-loader": "^0.0.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0"
  },
  "gitHead": "a94e1e281f5817f0aca4a3a8874a00496e7abbc6"
}
