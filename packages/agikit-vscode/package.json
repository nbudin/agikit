{
  "name": "agikit-vscode",
  "displayName": "agikit-vscode",
  "description": "Develop games for Sierra's AGI adventure game engine",
  "version": "0.4.0",
  "engines": {
    "vscode": "^1.54.0"
  },
  "publisher": "nbudin",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nbudin/agikit.git"
  },
  "activationEvents": [
    "onLanguage:agilogic",
    "onCommand:workbench.action.tasks.runTask",
    "onCommand:agikit.runWithScummVM"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "taskDefinitions": [
      {
        "type": "agikit-build"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "agikit",
      "properties": {
        "agikit.scummvmPath": {
          "scope": "machine-overrideable",
          "type": "string",
          "description": "The path to the ScummVM executable."
        }
      }
    },
    "commands": [
      {
        "command": "agikit.runWithScummVM",
        "title": "Run AGI game with ScummVM"
      }
    ],
    "languages": [
      {
        "id": "agilogic",
        "extensions": [
          ".agilogic"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "agilogic",
        "scopeName": "source.agilogic",
        "path": "./syntaxes/agilogic.tmGrammar.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "directive": [
            "keyword.directive"
          ],
          "label": [
            "constant.other"
          ],
          "variable.pointer": [
            "variable.other.property"
          ],
          "invalid": [
            "invalid.illegal"
          ]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "prepare": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "agikit-cli": "^0.4.0",
    "agikit-core": "^0.4.0",
    "agikit-logic-language-server": "^0.4.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-uri": "^3.0.2"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.31",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
